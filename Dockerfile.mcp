# Lightweight build for Thoth MCP Server (no ingestion)
FROM python:3.12-slim AS builder

WORKDIR /build

# Install minimal build dependencies (no git, no gcc)
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy only necessary files for dependency installation
COPY pyproject.toml README.md ./
COPY thoth/__about__.py ./thoth/__about__.py

# Install MCP server dependencies including embedder requirements
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
        "mcp>=1.26.0" \
        "lancedb>=0.4.0" \
        "pyarrow>=14.0.0" \
        "google-cloud-storage>=3.7.0" \
        "google-cloud-secret-manager>=2.26.0" \
        "starlette>=0.52.1" \
        "uvicorn[standard]>=0.40.0" \
        "sse-starlette>=3.2.0" \
        "gitpython>=3.1.46" \
        "sentence-transformers>=5.2.2" \
        "torch>=2.10.0" \
        "httpx>=0.28.1" \
        "python-json-logger>=4.0.0"

# Copy source code (only MCP server parts)
COPY thoth/__init__.py thoth/__about__.py ./thoth/
COPY thoth/mcp ./thoth/mcp/
COPY thoth/shared/__init__.py ./thoth/shared/__init__.py
COPY thoth/shared/health.py ./thoth/shared/health.py
COPY thoth/shared/vector_store.py ./thoth/shared/vector_store.py
COPY thoth/shared/embedder.py ./thoth/shared/embedder.py
COPY thoth/shared/gcs_sync.py ./thoth/shared/gcs_sync.py
COPY thoth/shared/utils ./thoth/shared/utils/
COPY thoth/shared/sources ./thoth/shared/sources/

# Runtime stage
FROM python:3.12-slim

WORKDIR /app

# Install git for GitPython (needed for recent changes tool)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy only MCP server code
COPY --from=builder /build/thoth /app/thoth

# Create minimal directories (LanceDB local store / handbook_vectors)
RUN mkdir -p /app/data/lancedb /app/data/handbook_vectors

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Expose port
EXPOSE 8080

# Create non-root user
RUN useradd -m -u 1000 thoth && chown -R thoth:thoth /app/data
USER thoth

# Run MCP server
ENTRYPOINT ["python", "-m", "thoth.mcp.server"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8080/health').read()"
